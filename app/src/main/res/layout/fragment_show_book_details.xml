<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeActivity.ShowBookDetails"
    android:orientation="vertical"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/issuButton"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/about_book_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/secondaryDarkColor"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                />
            <TextView
                android:id="@+id/about_book_name"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BookNAme"
                android:textAlignment="center"
                android:textSize="26sp"
                android:textAllCaps="false"
                android:fontFamily="@font/dancingscript_bold"/>
            <TextView
                android:id="@+id/about_book_author"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:fontFamily="@font/dancingscript_regular"/>
            <TextView
                android:id="@+id/about_book_publisher"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publisher"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:fontFamily="@font/dancingscript_regular"/>
            <TextView
                android:id="@+id/about_book_genre"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:fontFamily="@font/dancingscript_regular"/>
            <TextView
                android:id="@+id/about_book_rating"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:fontFamily="@font/dancingscript_regular"/>
            <TextView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description-"
                android:textAlignment="viewStart"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:fontFamily="@font/dancingscript_bold"
                android:textColor="@color/secondaryDarkColor"
                />
            <TextView
                android:id="@+id/about_book_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="desc"
                android:layout_margin="8dp"
                android:textSize="16sp"
                />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/issuButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="Issue Book"
        android:textAllCaps="false"
        android:layout_margin="4dp"
        android:textColor="@color/primaryTextColor"
        android:background="#fb8c00"
        />

</RelativeLayout>